# compiler to be used
CC = gcc

# The source files (.c)
SRC = main.c school.c

# The object files (.o)
OBJ = $(SRC:.c=.o)

# Name of the executable
NAME = school

# Target and its dependencies
school: $(OBJ)
	$(CC) $(OBJ) -o school

# Rule to generate object files from source files
%.o: %.c
	$(CC) -c $< -o $@

# Default rule to build the executable
all: school
